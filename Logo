#!/bin/bash

# Цвета
TERRACOTTA='\033[38;5;208m'
NC='\033[0m'

# Функция для вывода терракотового текста
function show() {
    echo -e "${TERRACOTTA}$1${NC}"
}

# Вывод ASCII-арта
show "----------------------------------------------------------------------"
show '███╗   ██╗ ██████╗ ██████╗  █████╗ ████████╗███████╗██╗  ██╗ █████╗ '
show '████╗  ██║██╔═══██╗██╔══██╗██╔══██╗╚══██╔══╝██╔════╝██║ ██╔╝██╔══██╗'
show '██╔██╗ ██║██║   ██║██║  ██║███████║   ██║   █████╗  █████╔╝ ███████║'
show '██║╚██╗██║██║   ██║██║  ██║██╔══██║   ██║   ██╔══╝  ██╔═██╗ ██╔══██║'
show '██║ ╚████║╚██████╔╝██████╔╝██║  ██║   ██║   ███████╗██║  ██╗██║  ██║'
show '╚═╝  ╚═══╝ ╚═════╝ ╚═════╝ ╚═╝  ╚═╝   ╚═╝   ╚══════╝╚═╝  ╚═╝╚═╝  ╚═╝'
show "----------------------------------------------------------------------"

# Ожидание 3 секунды перед началом процесса
sleep 1
